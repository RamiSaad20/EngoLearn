<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D4EDF7"
    tools:context=".AboutUs">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="نبذة مختصرة عن مطور التطبيق"
        android:gravity="center"
        android:textColor="#34091C"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#34091C" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="الأسم : رامي سعد  \n أعمل في مجال التصميم وتطوير التطبيقات وعضو في فريق DevImpact "
        android:gravity="right"
        android:textColor="#34091C"
        android:textAppearance="?android:textAppearanceSmall"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/txtPresent"
        android:textStyle="bold"
        android:text="لمتابعة أعمالنا"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/txtPresent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/me_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/allTxt"
        android:textStyle="bold"
        android:background="@drawable/edt_links"
        android:text="صفحتي الشخصيه علي فيس بوك"/>

    <TextView
        android:id="@+id/dev_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/allTxt"
        android:textStyle="bold"
        android:background="@drawable/edt_links"
        android:text="الصفحة الشخصية لفريق DevImpact"/>


    <TextView
        android:id="@+id/dev_sit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/allTxt"
        android:textStyle="bold"
        android:background="@drawable/edt_links"
        android:text="لمشاهده تطبيقات الفريق"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

</LinearLayout>